<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="@color/white" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="@color/primary" />

    <!-- Corner Radius -->
    <corners android:radius="20dp" />

    <!-- Padding (optional) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
